<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E9F1"
    android:orientation="vertical"
    tools:context=".Activity.MessageActivity"
    >
<LinearLayout
    android:background="@color/white"
    android:paddingTop="8pt"
    android:paddingBottom="8pt"
    android:id="@+id/layout_IF"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:paddingEnd="10pt"
    android:layout_height="wrap_content"
    android:paddingStart="10pt"
    >
    <ImageView
        android:clickable="true"
        android:id="@+id/bt_back"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/ic_arrow_back"
        android:focusable="true"
        tools:ignore="ContentDescription,UnusedAttribute"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="25pt"
        android:layout_marginStart="5pt"
        android:layout_height="25pt"
        app:cardCornerRadius="17.5pt"
        >
        <ImageView
            android:id="@+id/avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="InefficientWeight">
   <TextView
       android:textSize="8pt"
       android:text="Trịnh Việt Hoàng"
       android:id="@+id/name_message"
       android:textColor="@color/black"
       android:textStyle="bold"
       android:layout_width="70pt"
       android:layout_height="wrap_content"
       />
        <TextView
            android:id="@+id/status"
            android:text="Online"
            android:textSize="7pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            />
</LinearLayout>
<ImageView
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="8pt"
    android:layout_width="wrap_content"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_call"
    android:id="@+id/bt_call"
    />
    <ImageView
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginStart="8pt"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:id="@+id/bt_menu"
        tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute" />
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_close"
        android:background="@color/white"
        android:paddingStart="10pt"
        android:paddingEnd="10pt"
        android:paddingTop="8pt"
        android:paddingBottom="8pt"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/bt_close"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="@color/white"
            android:src="@drawable/icon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/count_select"
            android:layout_marginStart="8pt"
            android:text="Đã chọn: 0"
            android:textSize="10pt"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:background="#E2E9F1"
        android:layout_weight="1"
        android:id="@+id/rMessage"
        android:paddingStart="10pt"
        android:paddingEnd="10pt"
        android:layout_height="wrap_content"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/layout_send"
        android:paddingBottom="5pt"
        android:gravity="center_vertical"
        android:paddingStart="5pt"
        android:paddingEnd="5pt"
        android:paddingTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image"
            />
        <ImageButton
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:layout_weight="1"
            android:layout_marginTop="1.5pt"
            android:layout_marginBottom="2pt"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="2pt"
            >
        <LinearLayout
           android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="#F1F1F1"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Nhắn tin"
                android:paddingTop="2pt"
                android:id="@+id/ip_message"
                android:paddingBottom="2pt"
                android:singleLine="true"
                android:textSize="8pt"
                />

            <ImageButton
                android:layout_marginStart="5pt"
                android:backgroundTint="#F1F1F1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_emoticon"
                />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageButton
        android:layout_marginStart="5pt"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_send"
        android:src="@drawable/ic_send"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6pt"
            android:layout_marginStart="5pt"
            android:layout_marginEnd="5pt"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="13pt"
                android:layout_height="13pt"
                android:src="@drawable/img_reply"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/black"
                android:text="Trả lời"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6pt"
            android:layout_marginStart="5pt"
            android:layout_marginEnd="5pt"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="13pt"
                android:layout_height="13pt"
                android:src="@drawable/img_cloud"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/black"
                android:text="Lưu cloud"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6pt"
            android:layout_marginStart="5pt"
            android:layout_marginEnd="5pt"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="13pt"
                android:layout_height="13pt"
                android:src="@drawable/img_reply"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/black"
                android:text="Trả lời"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/bt_Delete"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6pt"
            android:layout_marginStart="5pt"
            android:layout_marginEnd="5pt"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="13pt"
                android:layout_height="13pt"
                android:src="@drawable/img_delete"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/black"
                android:text="Xóa"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
