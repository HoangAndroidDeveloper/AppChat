<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F5"
    tools:context=".Activity.Profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/frameLayout"
        android:layout_height="180pt"
        >
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/cover_image"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="150pt"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="60pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="115pt"
            android:layout_marginBottom="5pt"
            android:layout_height="60pt"
            app:cardCornerRadius="30pt"
            android:layout_gravity="center_horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="50pt"
                app:cardCornerRadius="25pt"
                android:layout_gravity="center"
                android:layout_height="50pt"
                >
                <ImageView
                    android:id="@+id/avt"
                    android:src="@drawable/img_girl_1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10pt"
            >
            <ImageView
                android:clickable="true"
                android:id="@+id/bt_back_profile"
                android:foreground="?attr/selectableItemBackground"
                android:padding="3pt"
                android:layout_width="24pt"
                android:layout_height="24pt"
                android:src="@drawable/img_back"
                tools:ignore="ContentDescription,KeyboardInaccessibleWidget,UnusedAttribute" />
            <SurfaceView
                android:alpha="0"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="InefficientWeight" />
            <ImageView
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="3pt"
                android:scaleType="centerCrop"
                android:layout_marginRight="3pt"
                android:layout_marginLeft="3pt"
                android:layout_width="24pt"
                android:layout_height="24pt"
                android:src="@drawable/img_phone_white"
                tools:ignore="ContentDescription,KeyboardInaccessibleWidget,UnusedAttribute" />
            <ImageView
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="3pt"
                android:scaleType="centerCrop"
                android:layout_marginRight="3pt"
                android:layout_marginLeft="3pt"
                android:layout_width="24pt"
                android:layout_height="24pt"
                android:src="@drawable/img_account"
                tools:ignore="ContentDescription,KeyboardInaccessibleWidget,UnusedAttribute" />

            <ImageView
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="3pt"
                android:layout_marginLeft="3pt"
                android:id="@+id/bt_back"
                android:layout_width="24pt"
                android:scaleType="centerCrop"
                android:layout_height="24pt"
                android:src="@drawable/img_ellipsis"
                tools:ignore="ContentDescription,KeyboardInaccessibleWidget,RtlHardcoded,UnusedAttribute" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6pt"
            android:gravity="center"
            android:text="Trịnh Việt Hoàng"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:textSize="14pt"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Xin chào cùng trò chuyện nhé"
            android:textSize="10pt"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F2F5"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="2pt"
                android:layout_marginBottom="4pt"
                android:layout_weight="1"
                android:background="@drawable/custom_layout_profile"
                android:clickable="true"
                android:elevation="3pt"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5pt"
                tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded,UnusedAttribute">

                <ImageView
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_image"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7pt"
                    android:text="Ảnh 2"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="10pt"
                android:layout_marginBottom="4pt"
                android:layout_weight="1"
                android:background="@drawable/custom_layout_profile"
                android:clickable="true"
                android:elevation="3pt"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5pt"
                tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded,UnusedAttribute">

                <ImageView
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_video"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7pt"
                    android:text="Video 0"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

<SurfaceView
    android:layout_weight="1"
    android:alpha="0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/custom_bt_chat_profile"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="8pt"
            android:paddingTop="5pt"
            android:paddingEnd="8pt"
            android:paddingBottom="5pt"
            tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

            <ImageView
                android:layout_width="15pt"
                android:layout_height="15pt"
                android:scaleType="centerCrop"
                android:src="@drawable/img_chat_blue"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:text="Nhắn tin"
                android:textColor="@color/black"
                android:textSize="8pt"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>