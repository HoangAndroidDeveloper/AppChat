<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="10pt"
    android:paddingEnd="10pt"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="20pt"
        android:layout_height="20pt"
        app:cardCornerRadius="10pt"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_girl_1"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5pt"
        android:orientation="vertical"
        android:paddingStart="8pt"
        android:paddingEnd="8pt"
        android:paddingTop="4pt"
        android:paddingBottom="2pt"
        android:background="@drawable/custom_message"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Hoàng"
        android:textSize="10pt"
        android:textColor="@color/black"
        android:id="@+id/message_dialog"
        />
        <TextView
            android:layout_marginTop="2pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:15"
            android:textSize="6pt"
            android:textColor="@color/black"
            android:id="@+id/time_dialog"
            />
    </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8pt"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/r_Emoji"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            />
    </androidx.cardview.widget.CardView>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="6pt"
                android:layout_marginStart="5pt"
                android:layout_marginEnd="5pt"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:src="@drawable/img_reply"
                    android:layout_width="17pt"
                    android:layout_height="17pt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:text="Trả lời"
                    />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:padding="6pt"
                android:gravity="center_horizontal"
                android:layout_marginStart="5pt"
                android:layout_marginEnd="5pt"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:src="@drawable/img_cloud"
                    android:layout_width="17pt"
                    android:layout_height="17pt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:text="Cloud"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:padding="6pt"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="5pt"
                android:layout_marginEnd="5pt"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:src="@drawable/img_share"
                    android:layout_width="17pt"
                    android:layout_height="17pt"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:text="Chia sẻ"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:padding="6pt"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="5pt"
                android:layout_marginEnd="5pt"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="17pt"
                    android:src="@drawable/img_copy" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:text="Copy"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <LinearLayout
                android:padding="6pt"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginStart="5pt"
                android:layout_marginEnd="5pt"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="17pt"
                    android:layout_height="17pt"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_delete"
                    />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="7pt"
                    android:textColor="@color/black"
                    android:text="Xóa"
                    />
            </LinearLayout>

                <LinearLayout
                    android:padding="6pt"
                    android:id="@+id/bt_select"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginStart="5pt"
                    android:layout_marginEnd="5pt"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="17pt"
                        android:layout_height="17pt"
                        android:src="@drawable/img_select"
                        />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="7pt"
                        android:textColor="@color/black"
                        android:text="Chọn nhiều"
                        />
                </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>